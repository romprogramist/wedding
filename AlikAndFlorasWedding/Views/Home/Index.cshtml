@{
	ViewData["Title"] = "Home Page";
}

@section Styles {
	<environment include="Development">
		<link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="~/css/home-bundle.css" asp-append-version="true">
	</environment>
	@* <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"/> *@
}

@section Scripts {
	<environment include="Development">
    	<script src="~/js/home.js" asp-append-version="true"></script>
    </environment>
	<environment exclude="Development">
		<script src="~/js/home-bundle.js" asp-append-version="true"></script>
	</environment>
	@* <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script> *@
}


<section class="main">
	<div class="wrapper">
		<h1>
			ALIK & FLORA
		</h1>
	</div>
	<h2>WEDDING DAY</h2>
	<p>24 | 08 | 24</p>
	<img src="/images/icon/logo-2.svg" alt="">
</section>
<section class="dear-guests">
	<div class="wrapper">
		<img src="/images/icon/logo-3.svg" alt="">
		<h2>Дорогие гости!</h2>
		<p>В нашей жизни скоро состоится важное <br> событие - наша свадьба !</p>
		<div class="items">
			<div class="item item-img">
				<img src="/images/img/dear-guests.jpg" alt="">
			</div>
			<div class="item">
				<h3>SAVE THE <br> DATE</h3>
				<p>24 | 08 | 24</p>
			</div>
		</div>
		<p>Мы приглашаем Вас разделить с нами <br> этот особенный день !
	</div>
</section>
<section class="location">
	<div class="wrapper">
		<div class="items">
			<div class="item">
				<h2>LOCATION</h2>
				<h3>Будем ждать вас по адресу:</h3>
				<div class="circle">
					Ресторан «Владикавказ» <br>
					ул. Коцаева, 75
				</div>
			</div>
			<div class="item item-img">
				<img src="/images/img/location.jpg" alt="">
			</div>
		</div>
	</div>
</section>
<section class="daily-program">
	<div class="wrapper">
		<h2>ПРОГРАММА ДНЯ</h2>
		<div class="items">
			<div class="item">
				<img src="/images/icon/daily-program-1.svg" alt="">
				<div>
					<p>10:30</p>
					<h2>Дом невесты</h2> 
					<h3>
						г. Владикавказ, <br>
						ул. Владимира Эльмесова, 3
					</h3>
				</div>
			</div>
			<div class="item">
				<img src="/images/icon/daily-program-2.svg" alt="">
				<div>
					<p>12:00</p>
					<h2>Венчание</h2>
					<h3>
						г. Владикавказ, ул Армянская, 1
					</h3>
				</div>
			</div>
			<div class="item">
				<img src="/images/icon/daily-program-3.svg" alt="">
				<div>
					<p>16:00</p>
					<h2>Банкет</h2>
					<h3>
						г. Владикавказ, ул. Коцоева, 75
					</h3>
				</div>
			</div>
		</div>
		<img src="/images/icon/logo-4.svg" alt="" title="">
	</div>
</section>
<section class="before-the-wedding" id="countdown">
	<div class="wrapper">
		<h2>До свадьбы</h2>
		<div class="items">
			<div><span id="days"></span>дней</div>
			<div><span id="hours"></span>часов</div>
			<div><span id="minutes"></span>минут</div>
			<div><span id="seconds"></span>секунд</div>
		</div>
	</div>
</section>
<section class="application">
	<h2>
		Будем счастливы видеть каждого из вас на нашем празднике!
	</h2>
	<p>Подтвердите, пожалуйста, свое <br> присутствие на торжестве до <br> 10.08.2024 </p>
	<form class="application-form form-box">
		<label>
			Имя Фамилия
			<input placeholder="Роман Агабабян" type="text" name="name">
		</label>
		<label for="attendance">Сможете ли вы присоединиться к нашему празднику?
			<select name="attendance" id="attendance">
				<option value="yes">Да, могу</option>
				<option value="no">Нет, не могу</option>
			</select>
		</label>
		<label for="guests">Количество гостей (1-10):
			<input type="number" id="guests" name="guests" min="1" max="10" value="1">
		</label>
		<button class="button" type="submit">Оставить заявку</button>
	</form>
</section>
<section class="see-you-later">
	<img src="/images/img/AF.jpg" alt="" title="">
	<div>
		<h2>До встречи !</h2>
		<p>24 | 08 | 24</p>
	</div>
</section>

