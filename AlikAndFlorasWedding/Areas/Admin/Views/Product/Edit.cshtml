@model ProductModel

@{
	ViewBag.Title = "Edit product";
}

<environment include="Development">
	<script src="~/js/admin/product.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
	<script src="~/js/admin-product-bundle.js" asp-append-version="true"></script>
</environment>

<h1>Edit product</h1>

<form class="product-edit">
	<input type="hidden" name="id" value="@Model.Id"/>
	<label>
		Name
		<input value="@Model.Name" type="text" name="name"/>
	</label>
	<label>
		Model
		<input value="@Model.Model" type="text" name="model"/>
	</label>
	<img src="/images/products/@Model.ImageUrl" alt="@Model.Name"/>
	<input class="form-file" type="file" accept="image/*"/>
	<button type="submit">Edit product</button>
</form>
